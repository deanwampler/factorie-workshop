# Latent Direchlet Allocation on the Enron Email Corpus (sample)

help=<<EOF
usage: bin/lda [--num-topics N] [--num-iterations I] --read-dirs dir1 [dir2 ...]
where:
  -h | --help                  Show this message
  --num-topics N               Find N topics (default: 20)
  --num-iterations I           Run I times (default: 10)
  --read-dirs dir1 [dir2 ...]  Directories to read.
EOF

num_topics=20
num_iterations=10
read_dirs=
reading_dirs=0
while [ $# -ne 0 ]
do
  case $1 in
    -h | --help)        echo $help; exit 0        ;;
    --num-topics)       shift; num_topics=$1      ;;
    --num-iterations)   shift; num_iterations=$1  ;; 
    *)                  break                     ;;
  esac
  shift
done

bin/fac lda --num-topics $num_topics --num-iterations $num_iterations "$@"